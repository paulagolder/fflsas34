{# templates/message/form.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('css/form.css') }}" rel="stylesheet" />
{% endblock %}
{% block js %}
<script src='https://www.google.com/recaptcha/appi.js'></script>
<script src='https://www.google.com/reCAPTCHA/api.js'async defer></script>
{% endblock %}

{% block middle %}
<div id="contactform" >
    <div class=heading>
        <div class="label" >{{'contact.us' | trans}}</div>
    </div>       
    <div class="form">
        {{form_start(form)}}
        {{ form_row(form.toname) }}
        {{ form_row(form.fromname) }}
        {{ form_row(form.fromemail) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}
        <button type="submit">envoyer!</button>
        {{form_end(form)}}
        <div class="g-recaptcha" data-sitekey ="6Lc9JZgUAAAAAPgXKPqDHtP16WAo0rrSliQj5VFx"></div>
    </div>
    
</div>

{% endblock %}
