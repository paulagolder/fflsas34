
{% block stylesheets %}
   <link href="{{ asset('css/randomimage_p/showone.css') }}" rel="stylesheet" />
{% endblock %}


   {% if image %}
   <div id="randomimage" >
     <div class="heading">{% trans %}image.chance{% endtrans %}</div> 
     <div class="image"> 
        <a href="{{image.link}}" > <img src="{{ image.fullpath }}" style ="max-width:100%; max-height:100%;" /></a>
     </div>
     {% if title is defined %}
      <div class="title">{{title}}</div> 
      {% else %}
      <div class="title">Title Not found</div> 
      {% endif %}
    </div>
  {% endif %}

