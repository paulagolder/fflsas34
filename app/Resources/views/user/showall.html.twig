{# templates/person/showall.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
      {{ parent() }}
   <link href="{{ asset('css/user/showall.css') }}" rel="stylesheet" />
{% endblock %}

{% block middle %}
  <div id="fusers">
   {% if message %}
     <h1> {{message}}</h1>
   {% endif %}

   {% if fusers %}
     <h1>{{heading | trans}} ({{ fusers | length }} )</h1> 
     <div class="fuserlist">
   
         {% for fuser in fusers %}
           <div class="user">
            <div><a href="{{fuser.link}}" >{{fuser.username}} </a></div>
            <div class="deletebutton" > <a class="deletebutton" href="/admin/user/delete/{{fuser.userid}}" >{{"delete.user" | trans }} </a> </div>
                 </div>
         {% endfor %}

     </div>
  {% endif %}
  </div>
{% endblock %}



{% block left%}
 
{% endblock %}
