{# templates/user/edit.html.twig #}


{% import 'macros.twig' as m %}

{% extends 'admin.html.twig' %}

{% block stylesheets %}
      {{ parent() }}
   <link href="{{ asset('css/user/show.css') }}" rel="stylesheet" />
{% endblock %}


{% block middle %}

<div id="fuser"  >
<div class="heading">
  <div class="label" > {%trans%}edit.person{% endtrans%}</div>
  <div class="title" > user.username</div>

  <div class="editbutton" ><a class='editbutton' href="/{{lang}}/useredit/{{user.userid}}">{{'edit.user.detail' |trans}}</a></div>
  <div class="returnbutton"> <a href = {{returnlink}} >{% trans %} annuler {% endtrans%} </a> </div>
</div>

<div  class="userdata" >
 <div class="datarow">
  <div class="label" > {%trans%}user.email{% endtrans%}</div>
  <div class="title" > {{user.email}}</div>
 </div>
 <div class="datarow">
  <div class="label" > {%trans%}user.roles{% endtrans%}</div>
  <div class="title" > {{user.rolestr}}</div>
 </div>
  <div class="datarow">
  <div class="label" > {%trans%}user.lastlogin{% endtrans%}</div>
  <div class="title" > {{user.lastlogin | date("Y-m-d") }}</div>
 </div>
</div>

<div class="contactlist" >
<div class="subheading" >
  <div class="title" > {{'contact.list' | trans }}</div>
</div>

{% for contact in contacts %}
<div class= "contact">
 <div class="subject" > {{contact.subject}}</div>
 <div class= "date" > {{contact.date_sent | date("Y-m-d") }}</div>
 <div class = "message" > {{ contact.message|length > 50 ? contact.message|slice(0, 50) ~ '...' : contact.message  }}</div>
</div>
{% endfor %}

</div>
{% endblock %}
