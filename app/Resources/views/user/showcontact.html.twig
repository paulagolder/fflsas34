{# templates/user/showmessage.html.twig #}

{% extends 'admin.html.twig' %}

{% block stylesheets %}
      {{ parent() }}
   <link href="{{ asset('css/user/show.css') }}" rel="stylesheet" />
{% endblock %}


{% block middle %}

<div id="fuser"  >
<div class="heading">
  <div class="label" > {%trans%}edit.person{% endtrans%}</div>
  <div class="title" > {{user.username}} ({{user.email}}</div>

  <div class="editbutton button1" ><a class='editbutton' href="/{{lang}}/useredit/{{user.userid}}">{{'edit.user.detail' |trans}}</a></div>
  <div class="returnbutton"> <a href = {{returnlink}} >{% trans %} annuler {% endtrans%} </a> </div>
</div>



<div class="messagelist" >
<div class="subheading" >
  <div class="label" > {{'message' | trans }}</div>
</div>



 <div class="subject" > {{message.subject}}</div>
 <div class= "date" > {{message.date_sent | date("Y-m-d") }}</div>
 <div class = "message" > {{ message.message|length > 50 ? message.message|slice(0, 50) ~ '...' : message.message  }}</div>
 <div class = "editbutton button1">
      <a class='editbutton' href="/{{lang}}/user/{{user.userid}}/viewmessage/{{message.id}}">{{'view.message' |trans}}</a>
 </div>
  <div class = "deletebutton">
      <a class='deletebutton' href="/{{lang}}/user/{{user.userid}}/message/delete/{{message.id}}">{{'delete.message' |trans}}</a>

</div>


</div>
{% endblock %}
