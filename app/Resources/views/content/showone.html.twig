{# templates/content/showone.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
<link href="{{ asset('css/content_css/showone.css') }}" rel="stylesheet" />
{% endblock %}
{% block js %}
{{ parent() }}

{% endblock %}


{% block middle %}

<div id="content" >
{% if message %}
    <h1> {{message}}</h1>
{% endif %}

{% if content %}
    <div class="heading" >
       <div class="title">{{content.title}}</div> 
    </div>
    
    <div class='maintext'>
        {{ content.text | raw}} 
    </div>

    <div class="refs">
      {% if refs != null and (refs| length)>0 %}
       <div  class="linksheading" >{%trans%}liens.a{% endtrans %}</div>
       {% for obtype , oref in refs %}
          <div class="linkgroup" >{{obtype  | trans}}</div>
          {% for obid , ref in oref %}       
            <div class="ref" > <a href="{{ ref.link }}">{{ref.label}}</a> </div>
          {% endfor %}
       {% endfor %}
       {% endif %}
    </div>
{% endif %}
</div>

{% endblock %}

